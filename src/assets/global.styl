	text-align: center
.text-middle
	vertical-align: middle
.text-right
	text-align: right
.text-small
	font-size: .85em
.text-tiny
	font-size: .75em
.mr-1
	margin-right: 1rem
.mt-1
	margin-top: 1rem
.mt-2
	margin-top: 2rem
.mt-5
	margin-top: 5rem
.mr-1
	margin-right: 1rem
.mr-2
	margin-right: 2rem
.ml-auto
	margin-left: auto
.mb-05
	margin-bottom: .5rem
.mb-1
	margin-bottom: 1rem
.mt-6
	margin-top: 6rem
.my-6
	margin-top: 6rem
	margin-bottom: 6rem
.m-0-auto
	margin: 0 auto
